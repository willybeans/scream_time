{
	"manifest_version": 2,
	"name": "Scream Time",
	"description": "A browser extension to encourage you to get off your computer",
	"version": "0",
	"author": "Will Wedmedyk",
	"icons": {
		"16": "images/icons/16.png",
		"19": "images/icons/19.png",
		"38": "images/icons/38.png",
		"64": "images/icons/64.png",
		"128": "images/icons/128.png"
	},

	"web_accessible_resources": [
		"note.mp3",
		"scream.mp3",
		"scream2.mp3",
		"scream3.mp3"
	],

	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["main.js"]
		}
	]
}
